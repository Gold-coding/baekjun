#include <iostream>
using namespace std;

int N;
long long result = 0;

void dfs(int row, int col, int diag1, int diag2) {
    if (row == N) {
        result++;
        return;
    }

    int available = ((1 << N) - 1) & ~(col | diag1 | diag2);

    while (available) {
        int bit = available & -available;
        available -= bit;

        dfs(row + 1,
            col | bit,
            (diag1 | bit) << 1,
            (diag2 | bit) >> 1);
    }
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    cin >> N;
    dfs(0, 0, 0, 0);
    cout << result << "\n";

    return 0;
}
