#include <stdio.h>

int m, n;
int box[1000][1000];
int qx[1000000], qy[1000000];
int dx[4] = {1, -1, 0, 0};
int dy[4] = {0, 0, 1, -1};

int main() {
    scanf("%d %d", &m, &n);

    int front = 0, rear = 0;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            scanf("%d", &box[i][j]);
            if (box[i][j] == 1) {
                qx[rear] = i;
                qy[rear] = j;
                rear++;
            }
        }
    }

    while (front < rear) {
        int x = qx[front];
        int y = qy[front];
        front++;

        for (int d = 0; d < 4; d++) {
            int nx = x + dx[d];
            int ny = y + dy[d];

            if (nx >= 0 && nx < n && ny >= 0 && ny < m) {
                if (box[nx][ny] == 0) {
                    box[nx][ny] = box[x][y] + 1;
                    qx[rear] = nx;
                    qy[rear] = ny;
                    rear++;
                }
            }
        }
    }

    int result = 0;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (box[i][j] == 0) {
                printf("-1\n");
                return 0;
            }
            if (box[i][j] > result)
                result = box[i][j];
        }
    }

    printf("%d\n", result - 1);
    return 0;
}
