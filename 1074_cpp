#include <iostream>
using namespace std;

int main() {
    int N, r, c;
    cin >> N >> r >> c;

    int result = 0;
    for (int i = N - 1; i >= 0; i--) {
        int half = 1 << i;
        int area = half * half;

        if (r >= half) {
            result += area * 2;
            r -= half;
        }
        if (c >= half) {
            result += area;
            c -= half;
        }
    }

    cout << result << '\n';
    return 0;
}
